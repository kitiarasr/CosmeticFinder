
@{


}
@model List<CosmeticFinder.Models.Cosmetic>

<h1> My Cosmetics</h1>
<h1>@ViewBag.Title</h1>

<div class="container-fluid">
    <table class="table tabl e-striped table-bordered">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <td>Rating</td>
            <td>Skin Type</td>
            <td>Formulation</td>
            <td>Color</td>
            <td>Finish</td>
        </tr>

        @foreach (var cosmetic in Model)
        {
            <tr>
                <td>@cosmetic.Name</td>
                <td>@cosmetic.Description</td>
                <td>@cosmetic.Rating.Value</td>
                <td>@cosmetic.SkinType.Value</td>
                <td>@cosmetic.Formulation.Value</td>
                <td>@cosmetic.Color.Value</td>
                <td>@cosmetic.Finish.Value</td>

                @*<td> <p><a asp-controller="Cosmetic" asp-action="Edit" asp-route-cosmeticId="@cosmetic.ID" asp-route-name="@cosmetic.Name">Edit</a></p></td>*@
            </tr>
        }
    </table>
</div>

@if (Model.Count == 0)
{
    <p>No cosmetics yet!</p>
}

<p><a asp-controller="Cosmetic" asp-action="Add">Add</a></p>
